    "6d7dd7d9-94cc-435e-b0fb-0f9dc12a96a9": {
      "type": "custom-liquid",
      "custom_css": [
        ".apply-form {margin: 30px auto; width: 100%; max-width: 400px; text-align: left; background: #fff; padding: 30px; border: 1px solid #ccc; border-radius: 20px; display: none;}",
        ".apply-form label {font-weight: bold; margin-bottom: 5px; display: block;}",
        ".apply-form .field {margin-bottom: 15px;}",
        "input {width: 100%;}"
      ],
      "settings": {
        "custom_liquid": "<div id=\"apply-form\" class=\"apply-form\">\n          <div class=\"field\">\n            <label>Name<\/label>\n            <input class=\"input\" type=\"text\" id=\"apply-name\" name=\"name\" \/>\n          <\/div>\n          \n          <div class=\"field\">\n            <label>Email<\/label>\n            <input class=\"input\" type=\"text\" id=\"apply-email\" name=\"email\" \/>\n          <\/div>\n          \n          <div class=\"field\">\n            <label>Social Handle(s) (full URL)<\/label>\n            <input class=\"input\" type=\"text\" id=\"apply-social\" name=\"social\" \/>\n          <\/div>\n          \n          <div style=\"text-align:center\">\n          <button class=\"btn btn--primary\" style=\"margin:auto;margin-top:30px;\">Apply<\/button>\n          <\/div>\n          \n\t    <\/div>\n    <\/div>\n\n<script>\n  $(document).ready(function() {\n$('.btn:contains(\"Apply Now!\")').on('click', function() {\n    \/\/$(this).hide();\n    $('.apply-form').fadeIn();\n$('html, body').animate({\n        scrollTop: $(\"#apply-form\").offset().top - 200\n    }, 500);\n  });\n  \n  $('.apply-form button').on('click', function() {\n    var name = $('#apply-name').val();\n    var email = $('#apply-email').val();\n    var social = $('#apply-social').val();\n    if(!name || !email || !social)\n      \treturn;\n    \n    $.ajax({\n        method: \"POST\",\n        url: RIPT.settings.apiUrl + \"\/shopify\/reapers\",\n        data: {\n          name: name,\n          email: email,\n          social: social\n        },\n        success: function (data) {\n      $('.apply-form').html('<div style=\"text-align:center\">Thanks for applying!<\/div>');\n    }\n      });\n})\n})\n<\/script>",
        "section_height": "default",
        "full_width": false,
        "dividers": "none",
        "prevent_animation": false
      }
    }
