  .earn h2, .earn h3, .spend h2, .spend h3 {line-height: 1; font-size: 2.5em}  
  .earn h3, .spend h3 {font-size: 1em; font-weight: bold; margin-bottom: 10px;}
  @media only screen and (max-width: 900px) {
    .earn h2, .earn h3, .spend h2, .spend h3, .vip h2 {
      font-size: 1.5em;
      text-align: center;
    }    
  }
  @media only screen and (min-width: 640px) {
    .spend h2, .spend h3 {text-align:left;}
  }

  /* -- */
  /* page header styles */
  /* -- */
  .hide {display: none;}
  .show {display: block;}
  section.header, section.refer-a-friend {text-align:center; margin-bottom: 50px; padding: 45px 25px; background: url('https://cdn.shopify.com/s/files/1/0739/9215/files/974593e6-457e-49b0-9c6b-8ae7b88981e6.gif?4644854711361502759'); background-size: contain; position: relative;}
  section.header .button {margin: 0 0 10px 0; }
  section.header .reaper {position: absolute;right: 0;top: 75px;}
  #rewards .reaper img {height: 200px; max-width: 300px; width: auto; }
  @media only screen and (max-width: 940px) {
    .reaper {display: none;} 
    section.header h1 {line-height: 1;}
  }
  section.header h1, section.refer-a-friend h2 {font-size: 3.5em; font-weight: bold; color: #fff; }
  section.header p {color: #fff; font-size: 22px; max-width: 700px; margin: 0 auto 30px;}

  /* -- */
  /* first */
  /* -- */
  .points-math {margin-bottom: 60px;}
  .points-math h2 {font-size: 2.5em;}
  @media only screen and (max-width: 900px) {
    .points-math h2 {font-size: 2em;}
  }
  
  /* -- */
  /* earn bones */
  /* -- */
  .earn {
    flex: 2;
  }
  .earn .flex-items { 
    flex-direction:row;
    flex-wrap:wrap;
    display:flex;
    flex: 1 1 0%;
  }
  .earn .item {
    width: calc(33.333% - 10px);  /* Or whatever */
    margin: 0 auto;  /* Magic! */
    background: #f2f2f2;
    padding: 1em;
    text-align: center;
    margin-bottom: 10px;
    border-radius: 25px;
    background: #F2F2F2;
    box-shadow: 4px 4px 40px 0px rgba(0, 0, 0, 0.15);
  }
  .earn small {font-size: 12px;}
  @media only screen and (max-width: 640px) {
    .earn .flex-items {margin-bottom: 30px;}
    .earn .item {
      width: calc(50% - 10px);  /* Or whatever */
    }
  }
  @media only screen and (max-width: 335px) {
    .earn .item {
      width: calc(100% - 10px);  /* Or whatever */
    }
  }

  /* -- */
  /* spend bones */
  /* -- */
  #rewards .spend img {
    margin-bottom: 0;
    width: 75px; max-width: 75px;
  }
  .spend {
    flex: 1;
  }
  .spend .item {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: centetr;
    align-content: stretch;
    align-items: center;
    margin-bottom: 40px;
    /*   border: 1px solid red; */
  }
