    .refer-a-friend p {width: 100%;}
    section.refer-a-friend h2 {font-size: 2em; line-height: 1; margin-bottom: 20px;}
  }
  
  /* -- */
  /* responsive tables  */
  /* -- */
  #rewards table {
    border-collapse: collapse;
    margin: 0;
    padding: 0;
    width: 100%;
    table-layout: fixed;
    border: none;
    border-radius: 30px;
    overflow: hidden;
  }
  #rewards table tr {
    padding: .35em;
  }
  #rewards table thead {
    background: #F5F5F5;
  }
  #rewards table th, #rewards table td {
    border: none;
  }
  #rewards table tr:nth-child(even) {
    background: #F9F9F9;
  }
  @media screen and (max-width: 600px) {
    #rewards table {
      border: 0;
    }
    #rewards table thead {
      border: none;
      clip: rect(0 0 0 0);
      height: 1px;
      margin: -1px;
      overflow: hidden;
      padding: 0;
      position: absolute;
      width: 1px;
    }
    #rewards table tr {
      display: block;
      margin-bottom: 1em;
      border: 1px solid #ccc;
    }
    #rewards table td {
      display: block;
      text-align: right;
      padding: 10px;
    }
    #rewards table td::before {
      /*
      * aria-label has no advantage, it won't be read inside a table
      content: attr(aria-label);
      */
      content: attr(data-label);
      float: left;
      font-weight: bold;
    }
    #rewards table td:last-child {
      border-bottom: 0;
    }
  }
  /* Dynamic edits to page based on member status */
  .rr-points-math .rr-points {font-weight: normal;}
  .rr-points-math p {margin-bottom: 20px;}
  .rr-points-math {margin-bottom: 20px;}
