  @media only screen and (max-width: 640px) {
    #rewards table th img {width: 60px; max-width: 60px;}
  }
  table tr td {padding: 20px; font-size: 1em;}
  table h3 {font-weight: bold; line-height: 1; font-size: 1.7em; margin-bottom: 10px;}


  /* -- */
  /* refer a friend styles */
  /* -- */
