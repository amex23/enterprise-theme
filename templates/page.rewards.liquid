  /* -- */
  /* table styles */
  /* -- */
  table {width: 100%; border: none;border-bottom: 15px solid black;}
  table th {border-bottom: 15px solid black;}
  table th:not(:first-child), table tr td:not(:first-child) {text-align: center;}
  table th:not(:first-child) {font-size: 1.2em;}
  table th:first-child > h3 {display: block !important;}
