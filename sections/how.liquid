<script src="https://cdn.tailwindcss.com"></script>
<div class="flex justify-center items-center py-12 px-3 md:px-10 gap-6 flex-col bg-[#ff8409]" style="background-color: ;">
    <h4 class="text-white text-4xl font-bold">{{ section.settings.section_heading }}</h4>
    <div class="flex flex-col md:flex-row justify-center items-center gap-10 w-full px-3 md:w-[80%]">
        {%- for block in section.blocks -%}
            <div class="flex justify-center items-center gap-3 flex-row md:flex-col">
                <img
                    class="img-logo"
                    {% comment %}
                    src="https://cdn.shopify.com/s/files/1/0739/9215/files/Group_48095692.png?v=1690794257"
                    {% endcomment %}
                    src="{{ block.settings.logo_image | img_url:'master' }}"
                    alt="">
                <div class="flex justify-center items-start md:items-center flex-col">

                    <h5 class="text-white font-bold text-3xl">{{ block.settings.heading }}</h5>
                    <p class="text-start md:text-center text-white">
                        {{ block.settings.subheading }}
                    </p>

                </div>
            </div>
        {%- endfor -%}

    </div>

    <a href="{{ section.settings.url }}" class="bg-white text-[#ff8409] px-14 rounded-full py-3 font-bold">{{ section.settings.button_text }}</a>
</div>

<style>
    .img-logo {
        width: 100px;
    }

    .py-10 {
        padding: 10px;
    }

    .gap-10 {
        gap: 10px;
    }
</style>

{% schema %}
    {
        "name": "How",
        "settings": [
            {
                "type": "text",
                "id": "section_heading",
                "label": "Section Heading"
            }, {
                "type": "text",
                "id": "button_text",
                "label": "Button Name"
            }, {
                "type": "url",
                "id": "link",
                "label": "Button Link"
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo_image",
                        "label": "Image"
                    }, {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    }, {
                        "type": "html",
                        "id": "subheading",
                        "label": "Sub Heading"
                    }

                ]
            }
        ],
        "presets": [
            {
                "name": "How"
            }
        ]
    }
{% endschema %}